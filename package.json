{
	"name": "launch",
	"version": "0.0.0",
	"workspaces": [
		"server",
		"frontend"
	],
	"scripts": {
		"dev": "bun run --filter '*' dev",
		"dev:server": "bun run --filter server dev",
		"dev:frontend": "bun run --filter frontend dev",
		"build": "bun run build:frontend && bun run build:server",
		"build:frontend": "bun run --filter frontend build",
		"build:server": "bun run --filter server build",
		"start": "cd server && ./server",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"bun-types": "latest",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2"
	},
	"dependencies": {
		"hono": "^4.11.7"
	}
}
